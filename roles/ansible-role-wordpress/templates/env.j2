
{% set __images = wordpress_images %}
{% for _ in __images -%}
#
# {{ _.service |upper }}
#
{{ _.service |upper + '_IMAGE_NAME=' + _.name|d(omit) }}
{{ _.service |upper + '_IMAGE_VERSION=' + _.version|d(omit) }}
{%   if _.context is defined and _.context |length > 0 -%}
{{     _.service |upper + '_BUILD_CONTEXT=' + _.context }}
{%   endif -%}
{%   if _.port is defined and _.port|string|length > 0 -%}
{{     _.service |upper + '_PORT=' + _.port|string }}
{%   endif -%}
{%   if _.volume is defined and _.volume |length > 0   -%}
{{     _.service |upper + '_VOLUME=' + _.volume|string }}
{%   endif -%}
{% endfor -%}
